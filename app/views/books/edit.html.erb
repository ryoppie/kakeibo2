
<h1>家計簿編集</h1>

<%= form_with model: @book, local: true, method: "patch" do |f| %>
  
  <div class="form-group">
    <label>年</label>
    <%= f.select :year, (2020..2030).to_a, { prompt: "年を選択してください" }, class: "form-control" %>
  </div>

 <div class="form-group">
  <label>月</label>
  <%= f.select :month, options_for_select((1..12).map { |m| [m, m] }, @book.month), {}, class: "form-control" %>
</div>

<div class="form-group">
  <label>日</label>
  <%= f.number_field :day, value: @book.day, class: "form-control", in: 1..31 %>
</div>
  
  <div class="form-group">
    <label>区分</label>
    <%= f.select :expend, [["夫精算", 1], ["妻精算", 2], ["精算完了", 3]], {}, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label>カテゴリ</label>
    <%= f.select :category, [["食費", 1], ["日用品", 2], ["家具・家電", 3], ["家賃・光熱費", 4]], {}, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <label>金額</label>
    <%= f.number_field :amount, class: "form-control" %>
  </div>
  
  <%= link_to "戻る", books_path, class: "btn btn-secondary" %>
  <%= f.submit "更新", class: "btn btn-primary" %>
  
<% end %>