<%= form_with model: @book do |f| %>
  <h1>家計簿新規登録</h1>

  <div class="form-group">
    <label>年</label>
    <%= f.select :year, (2020..2030).to_a, { prompt: "年を選択してください" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>月</label>
    <%= f.select :month, (1..12).to_a, { prompt: "月を選択してください" }, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>日</label>
    <%= f.number_field :day, class: "form-control", in: 1..31 %>
  </div>

  <div class="form-group">
    <label>区分</label>
    <%= f.select :expend, [["夫支払い", 1], ["妻支払い", 2], ["精算完了", 3]], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>カテゴリ</label>
    <%= f.select :category, [["食費", 1], ["日用品", 2], ["家具・家電", 3], ["家賃・光熱費", 4]], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>金額</label>
    <%= f.number_field :amount, class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "戻る", books_path, class: "btn btn-secondary" %>
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>